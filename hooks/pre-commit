#!/bin/bash
# Pre-commit hook: run build and tests before committing

echo "Running build..."
npm run build

if [ $? -ne 0 ]; then
  echo "Build failed. Commit aborted."
  exit 1
fi

echo "Running local tests..."
npm test

if [ $? -ne 0 ]; then
  echo "Local tests failed. Commit aborted."
  exit 1
fi

echo "Running remote tests..."
npm run test:remote

if [ $? -ne 0 ]; then
  echo "Remote tests failed. Commit aborted."
  exit 1
fi

echo "All tests passed."
